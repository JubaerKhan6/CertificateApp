@model CertificateApp.Models.AuthModels.LoginModel;
@{
    ViewData["Title"] = "Login Page";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
<div class="row">

    <div class="col-md-4 loginbox glasseffect">
        <h1 style="color: black">Login</h1>
        <p style="color: red"> @TempData["response"] </p>
        <form asp-action="Login" asp-controller="Login" method="post">
            <img src="~/lib/Images/Binge Logo.png" class="mb-5" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"> Username</label>
                <input asp-for="UserName" class="form-control text-black" required/>
                <span asp-validation-for="UserName" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"> Password</label>
                <input asp-for="Password" class="form-control text-black" required type="password" />
                <span asp-validation-for="Password" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="btn btn-primary" />
                </br>
                <a asp-controller="Login" asp-action="RegisterView" class="btn btn-warning" style="width:fit-content">Register</a>
            </div>
           
            <br />
            <div>
                <a asp-controller="Login" asp-action="Index" class="btn btn-danger">Back</a> 
            </div>
        </form>
    </div>
</div>